@model ZoologicoCrud.DTOS.AnimalCreateDto

@{
    ViewData["Title"] = "Registrar Animal";
}
@* 
@if(TempData["SuccessMessage"] != null)
{
    <h2>@TempData["SuccessMessage"]</h2>
} *@
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-success text-white text-center">
                    <h4>@ViewData["Title"]</h4>
                </div>

                <div class="card-body p-4">
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" placeholder="Ingrese el nombre del animal" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Descripción del animal"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Gender" class="form-label fw-bold"></label>
                            <select asp-for="Gender" class="form-select">
                                <option value="">Seleccione género</option>
                                <option value="Macho">Macho</option>
                                <option value="Hembra">Hembra</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="File" class="form-label fw-bold"></label>
                            <input asp-for="File" class="form-control" />
                            <span asp-validation-for="File" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SpecieId" class="form-label fw-bold"></label>
                            <select asp-for="SpecieId" asp-items="ViewBag.Species" class="form-select">
                                <option value="">Seleccione especie</option>
   
                            </select>
                            <span asp-validation-for="SpecieId" class="text-danger"></span>

                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-5">
                                <i class="bi bi-check-circle"></i> Registrar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-4 ms-2">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
